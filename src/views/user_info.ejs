<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin cá nhân</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #dff2f5;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        h2 {
            color: #333;
            text-align: center;
            font-size: 25px;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .form-control::placeholder {
            color: #999;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            margin-right: 10px;
        }

        .gender-group {
            display: flex;
            justify-content: space-around;
            margin: 10px 0;
        }

        .dob-group {
            display: flex;
            justify-content: space-between;
        }

        .dob-group select {
            width: 32%;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            border: none;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .edit-button {
            background-color: #28a745;
        }

        .edit-button:hover {
            background-color: #218838;
        }

        .edit-mode .form-control:disabled {
            background-color: #e9ecef;
        }

        .profile-pic {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 15px;
        }

        .profile-pic img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
            border: 2px solid #ccc;
        }

        .profile-pic input {
            display: none;
        }

        .profile-pic label {
            background-color: #007bff;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .profile-pic label:hover {
            background-color: #0056b3;
        }
    </style>
    <script>
        function loadFile(event) {
            const image = document.getElementById('profilePic');
            const srcfile = URL.createObjectURL(event.target.files[0]);
            image.src = srcfile;
        }

        function toggleEditMode() {
            const form = document.forms['profile'];
            const isDisabled = form.elements['email'].disabled;

            for (let i = 0; i < form.elements.length; i++) {
                form.elements[i].disabled = !isDisabled;
            }
            document.getElementById('editButton').style.display = isDisabled ? 'none' : 'block';
            document.getElementById('saveButton').style.display = isDisabled ? 'block' : 'none';
            document.querySelector('.profile-pic label').style.display = isDisabled ? 'block' : 'none';
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById("flexRadioDefault1").checked = true;
        });
    </script>
</head>
<body>
    <div class="container">
        <h2>Thông tin cá nhân</h2>
        <form name="profile" action="../webtruyen/update_users" method="POST" enctype="multipart/form-data" >
            <div class="profile-pic">
                <img id="profilePic" src="\img\avt.jpg" alt="Profile Picture">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="firstname" placeholder="<%= userinfo.firstname%>"  disabled>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastname" placeholder="<%= userinfo.lastname %>"  disabled>
            </div>
            <div class="form-group gender-group" name="sex">
                <label><input type="radio" name="gender" value="Nam" disabled <%= userinfo.sex.trim() === 'Nam' ? 'checked' : '' %>> Nam</label> 
                <label><input type="radio" name="gender" value="Nữ" disabled <%= userinfo.sex.trim() === 'Nữ' ? 'checked' : '' %>> Nữ</label>
                <label><input type="radio" name="gender" value="Khác" disabled <%= userinfo.sex.trim() === 'Khác' ? 'checked' : '' %>> Khác</label>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="<%= userinfo.username %>" disabled>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="<%= userinfo.email %>" disabled>
            </div>
            <button type="button" id="editButton" class="btn edit-button" onclick="toggleEditMode()">Sửa thông tin</button>
            <button type="submit" id="saveButton" class="btn" style="display: none;">Lưu thông tin</button>
        </form>
    </div>
</body>
</html>
